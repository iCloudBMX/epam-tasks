@model EditProductViewModel
@{
    ViewData["Title"] = "Update Product";
}
<h1>@ViewData["Title"]</h1>

<form method="post" class="col-md-6">
  <div class="form-group">
    <label asp-for=@Model.Name>Product Name</label>
    <input asp-for=@Model.Name type="text" class="form-control" aria-describedby="emailHelp" placeholder=@Model.Name>
  </div>
  <div class="form-group">
    <label asp-for=@Model.Price>Price</label>
    <input asp-for=@Model.Price type="text" class="form-control" id="exampleInputPassword1" placeholder=@Model.Price>
  </div>
  <div class="form-group">
    <label asp-for=@Model.QuantityPerUnit>QuantityPerUnit</label>
    <input asp-for=@Model.QuantityPerUnit type="text" class="form-control" id="exampleInputPassword1" placeholder=@Model.QuantityPerUnit>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>